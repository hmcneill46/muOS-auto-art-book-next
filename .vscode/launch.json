{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--roms_dir", "TestingPaths/Roms",
                "--box_art_dir", "TestingPaths/FolderBox",
                "--panels_dir", "ARCHIVE file format/mnt/mmc/MUOS/task/.AutoArtBookNext/artwork-default",
                "--logos_dir", "ARCHIVE file format/mnt/mmc/MUOS/task/.AutoArtBookNext/logos",
                "--core_info_dir", "TestingPaths/infocore",
                "--system_map_path", "ARCHIVE file format/mnt/mmc/MUOS/task/.AutoArtBookNext/muosESmap.json",
                "--valid_muos_system_names_path", "ARCHIVE file format/mnt/mmc/MUOS/task/.AutoArtBookNext/validMuOsSystemNames.txt",
                "--log_file_output_dir", "log",
                "--font_path", "ARCHIVE file format/mnt/mmc/MUOS/task/.AutoArtBookNext/FallingSkyBdObl.otf",
                
                "--screen_width", "640",
                "--screen_height", "480",

                "--background_hex","#202020",
                "--gap_between_panels","7",
                "--icon_height_percent","0.5",
                "--icon_width_percent", "0.7",
                "--deselected_brightness", "0.4",
                "--shadow_strength","1",
                "--gradient_intensity","235"
            ]
        }
    ]
}