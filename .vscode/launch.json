    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--roms_dir", "TestingPaths/Roms",
                "--box_art_dir", "TestingPaths/FolderBox",
                "--slides_dir", "ARCHIVE file format/mnt/mmc/MUOS/task/.AutoArtBookNext/artwork-default",
                "--logos_dir", "ARCHIVE file format/mnt/mmc/MUOS/task/.AutoArtBookNext/logos",
                "--core_info_dir", "TestingPaths/infocore",
                "--system_map_path", "ARCHIVE file format/mnt/mmc/MUOS/task/.AutoArtBookNext/muosESmap.json",
                "--valid_muos_system_names_path", "ARCHIVE file format/mnt/mmc/MUOS/task/.AutoArtBookNext/validMuOsSystemNames.txt",
                "--screen_height", "720",
                "--screen_width", "720",
                "--icon_width_percent", "0.7",
                "--deselected_brightness", "0.2"
            ]
        }
    ]
}